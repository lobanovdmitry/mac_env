"" Source your .vimrc
source ~/.vimrc

"" -- Suggested options --
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=5
" show whitespaces
set list

" Do incremental searching.
set incsearch

" Plugins
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'

" Don't use Ex mode, use Q for formatting.
map Q gq
inoremap jj <Esc>


"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
:map <leader>b <Action>(ToggleLineBreakpoint)
:map <leader>o <Action>(OptimizeImports)
:map <leader>r <Action>(ReformatCode)<Action>(RearrangeCode)

:map <leader>dd <Action>(Debug)
:map <leader>dr <Action>(Rerun)
:map <leader>ds <Action>(Stop)

:map <leader>ii <Action>(ImplementMethods)
:map <leader>io <Action>(OverrideMethods)

:map <leader>ff <Action>(FindInPath)
:map <leader>fu <Action>(FindUsages)

:map <C-k> <Action>(MoveStatementUp)
:map <C-j> <Action>(MoveStatementDown)

:map <leader>cn <Action>(RenameElement)
:map <leader>cs <Action>(ChangeSignature)

:map <leader>em <Action>(ExtractMethod)
:map <leader>ev <Action>(IntroduceVariable)
:map <leader>ec <Action>(IntroduceConstant)
:map <leader>ef <Action>(IntroduceField)

:map ge <Action>(ShowErrorDescription)
:map gh <Action>(QuickJavaDoc)
:map gi <Action>(GotoImplementation)
:map gs <Action>(GotoSuperMethod)
:map gt <Action>(SelectInProjectView)

:map <A-h> <Action>(PreviousTab)
:map <A-l> <Action>(NextTab)

" Find more examples here: https://jb.gg/share-ideavimrc

